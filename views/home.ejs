  <body>
    <div class="content-wrapper">
      <div class="header">
        <div class="header__title">MAC Mapper</div>
      </div>

      <%- include('./includes/navigation.ejs') %>

      <div class="main">
        <form class="mac-form" action="/googlesearch" method="POST">
          <div class="form-control">
            <label for="mac" class="form-label">MAC Address</label>
            <input type="text" name="mac" id="mac" class="form-input"> 
          </div>

          <div class="form-control">
            <label for="ref" class="form-label">Reference</label>
            <input type="text" name="ref" id="ref" class="form-input"> 
          </div>

          <div class="form-control">
            <label for="details" class="form-label">Details</label>
            <input type="text" name="details" id="details" class="form-input"> 
          </div>

          <button class="btn" type="submit">Submit</button>
        </form>
      </div>

      <%- include('./includes/footer.ejs') %>
    </div>
